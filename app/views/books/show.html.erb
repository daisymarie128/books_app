<div class="single">
  <div class="singleimage">
    <%= image_tag(@book.image, :class => 'medium') %>
  </div><!--//////////close singleimage/////-->
    <div class="singleline">
    </div><!--//////////close singleline/////-->
  <div class="singleinfo">
    <h2><%= @book.title %></h2>
    <ul>
      <li><p>Pages: <%= @book.pages %></p></li>
      <li><p>ISBN: <%= @book.ISBN %></p></li>
      <li><p>Description: <%= @book.description %></p></li>
      <li><%= link_to('Edit', edit_book_path(@book)) %></li>
    <li><%= link_to('Delete', @books, :data => {:confirm => 'Are you sure?', :method => :delete}) %></li>
    </ul>
  </div><!--/////close singleinfo/////-->
</div><!--/////close single/////-->